<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="Perico Picadas" />
         <StackLayout class="home-panel">
          <TabView id="tabViewContainer">
    <TabViewItem title="Inicio" iconSource="res://icon">
        <StackLayout>
           <StackLayout class="m-20"></StackLayout>
            <Image src="https://raw.githubusercontent.com/Takarkuna/Empezando-Perico-Picadas/main/app/Perico2.jpg" stretch="aspectFit" width="250" class="m-b-10" ></Image>
            <TextField hint="Usuario" class="-border" backgroundColor= "#e0e4e0"/>
             <TextField hint="Contraseña" class="-border" backgroundColor= "#e0e4e0"/>
             <Label class="text-primary h5" text="Recuperar Contraseña"></Label>
             <StackLayout class=" m-20"></StackLayout>
              <Button class="-active h3" text="Ingresar" backgroundColor="#2ca52c" width="180" tap= "onTap"></Button>
               <StackLayout class="hr m-10"></StackLayout>
               <StackLayout class="hr m-10"></StackLayout>
                <Label class="text-primary font-weight-bold h3" text="Registrarse"></Label>
                 </StackLayout>
                 </TabViewItem>
                 
    <TabViewItem title="Registro">
       <ScrollView>
        <StackLayout>
          <StackLayout class="nt-form"></StackLayout>
            <Image src="https://raw.githubusercontent.com/Takarkuna/Empezando-Perico-Picadas/main/app/Perico2.jpg" stretch="aspectFit" width="150" class="m-b-10" ></Image>
             <Label class="text-center font-weight-bold h2" text="REGISTRO"></Label>
            <TextField hint="Nombre" class="-border" backgroundColor= "#e0e4e0"/>
             <TextField hint="Apellido" class="-border" backgroundColor= "#e0e4e0"/>
             <TextField hint="Documento de Identidad" class="-border" backgroundColor= "#e0e4e0"/>
            <TextField hint="Fecha de Nacimiento" class="-border" backgroundColor= "#e0e4e0"/>
             <TextField hint="Dirección" class="-border" backgroundColor= "#e0e4e0"/>
             <TextField hint="Teléfono" class="-border" backgroundColor= "#e0e4e0"/>
             <TextField hint="Correo Electrónico" class="-border" backgroundColor= "#e0e4e0"/>
             <TextField hint="Usuario" class="-border" backgroundColor= "#e0e4e0"/>
             <TextField hint="Contraseña" class="-border" backgroundColor= "#e0e4e0"/>
              <StackLayout class=" m-20"></StackLayout>
              <Button class="-active h3" text="Registrarse" backgroundColor="#2ca52c" width="180" tap= "onTap"></Button>
        </StackLayout>
        </ScrollView>
    </TabViewItem>
      <TabViewItem title="Recuperar Contraseña">
        <StackLayout>
          <StackLayout class="m-20"></StackLayout>
            <Image src="https://raw.githubusercontent.com/Takarkuna/Empezando-Perico-Picadas/main/app/Perico2.jpg" stretch="aspectFit" width="250" class="m-b-10" ></Image>
              <Label class="text-center font-weight-bold h2" text="RECUPERAR CONTRASEÑA"></Label>
              <Label class="h3" text="Ingrese el correo electrónico registrado en su cuenta para cambiar su contraseña"></Label>
               <TextField hint="Correo Electrónico" class="-border" backgroundColor= "#e0e4e0"/>
               <StackLayout class="m-20"></StackLayout>
                <Button class="-active h3" text="Enviar" backgroundColor="#2ca52c" width="180" tap= "onTap"></Button>
        </StackLayout>
      </TabViewItem>
  <TabViewItem title="Nueva Contraseña">
      <StackLayout>
        <StackLayout class="m-20"></StackLayout>
            <Image src="https://raw.githubusercontent.com/Takarkuna/Empezando-Perico-Picadas/main/app/Perico2.jpg" stretch="aspectFit" width="250" class="m-b-10" ></Image>
            <Label class="text-center font-weight-bold h2" text="CREAR NUEVA CONTRASEÑA"></Label>
             <TextField hint="Nueva Contraseña" class="-border" backgroundColor= "#e0e4e0"/>
             <TextField hint="Confirmar Contraseña" class="-border" backgroundColor= "#e0e4e0"/>
              <StackLayout class=" m-20"></StackLayout>
              <Button class="-active h3" text="Ingresar" backgroundColor="#2ca52c" width="180" tap= "onTap"></Button>
        </StackLayout>
      </TabViewItem>

</TabView>
</StackLayout>
</Page>
